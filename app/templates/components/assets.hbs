<div class="container container--assets-list">
  <Aside  @assetTypes={{@model.assetTypes}} @onChange={{this.onchange}}/>
  <div class="list-card">
    {{#each sortAssetList as |item index|}}
      <Ui::Card
        @index={{index}}
        @previewImage={{item.previewImage}}
        @title={{item.title}}
        @type={{item.type}}
        @tags={{item.tags}}
        @usedTotal={{item.usedTotalCount}}
        @saveItem={{isSaveItem}}
        @isCheckedItem={{isCheckedItem}}
        @originalFileSrc={{item.originalFileSrc}}
        @externalLink={{item.externalLink}}
        @controlUseButton={{this.controlUseButton}}
      />
    {{/each}}
  </div>
</div>